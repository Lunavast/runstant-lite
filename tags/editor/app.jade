app
  header

  div.main
    editor.panel(width='60%', height='100%', float='right', onsave='{onsave}')
    preview.panel(width='40%', height='60%', float='left')
    console.panel(width='40%', height='40%', float='left')
  footer

  style.
    body {
      background: hsl(0, 0%, 95%);
    }
    .main {
      position: absolute;
      width: 100%;
      height: calc(100% - 64px - 30px);
      overflow: hidden;
    }

    .panel {
      display: block;
      padding: 5px 5px;
      float: right;
      transition: 500ms;
    }

    .panel.fullscreen {
      width: 100% !important;
      height: 100% !important;
    }
    .panel.nofullscreen {
      width: 0% !important;
      height: 0% !important;
      opacity: 0.0;
      margin: 0px;
      padding: 0px;
    }
    .inner {
    /*
      border: 1px solid #ccc;
      */
      position: relative;
      width: 100%;
      height: 100%;
    }

  script.
    var self = this;
    this.on('mount', function() {
    });

    this.onsave = function() {
      self.tags.preview.refresh();
    };
